<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_activity_data_horizontal"
        android:layout_marginTop="@dimen/main_activity_data_horizontal"
        android:layout_marginEnd="@dimen/main_activity_data_horizontal"
        android:hint="@string/name"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/eddit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_activity_data_horizontal"
        android:layout_marginTop="@dimen/main_activity_top_padding"
        android:layout_marginEnd="@dimen/main_activity_data_horizontal"
        android:hint="@string/address"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/eddit_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <TextView
        android:id="@+id/text_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_activity_data_horizontal"
        android:layout_marginTop="@dimen/main_activity_top_padding"
        android:layout_marginEnd="@dimen/main_activity_data_horizontal"
        android:hint="@string/comment"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/eddit_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_address" />

    <Button
        android:id="@+id/eddit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_activity_data_horizontal"
        android:onClick="editName"
        android:text="@string/edit"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_name"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/eddit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_activity_data_horizontal"
        android:onClick="editAddress"
        android:text="@string/edit"
        app:layout_constraintBottom_toBottomOf="@+id/text_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_address" />

    <Button
        android:id="@+id/eddit_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_activity_data_horizontal"
        android:onClick="editComment"
        android:text="@string/edit"
        app:layout_constraintBottom_toBottomOf="@+id/text_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_comment" />
</androidx.constraintlayout.widget.ConstraintLayout>